pipeline {
  agent any

  environment {
    AWS_ACCESS_KEY_ID     = credentials('template-deploy')
    AWS_SECRET_ACCESS_KEY = credentials('naveen@PS2000')
    AWS_DEFAULT_REGION    = 'us-east-1'
    STACK_NAME            = 'MyCloudFormationStack'
    TEMPLATE_FILE         = 'aws-templates/infra.json'
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/naveenkumarpsnk/aws-terraform.git', branch: 'main'
      }
    }

    stage('Deploy CloudFormation') {
      steps {
        sh """
          aws cloudformation deploy \
            --stack-name ${STACK_NAME} \
            --template-file ${TEMPLATE_FILE} \
            --capabilities CAPABILITY_NAMED_IAM
        """
      }
    }
  }

  post {
    success {
      echo '✅ CloudFormation stack deployed successfully!'
    }
    failure {
      echo '❌ Deployment failed.'
    }
  }
}
